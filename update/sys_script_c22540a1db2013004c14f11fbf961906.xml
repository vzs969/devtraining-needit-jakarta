        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var curDate = new GlideDateTime();
	var whenNeeded = new GlideDateTime(current.u_when_needed);
	
	if(whenNeeded.before(curDate))
		{
			gs.addErrorMessage("DUN: When needed date can not be the past date from current date. So your request cant be submitted to the database.");
			current.setAbortAction(true);
		}
	
	var today = curDate.getLocalDate();
	var istoday = whenNeeded.getLocalDate();
	
	if(today.compareTo(istoday)==0)
		{
			gs.addErrorMessage("Sorry you can not set the current date as the delivery date.");
			current.setAbortAction(true);
		}
	gs.info("This is information message.");
	gs.warn("This is a warn message.");
	gs.error("This is a error message.");

})(current, previous);]]></script>
